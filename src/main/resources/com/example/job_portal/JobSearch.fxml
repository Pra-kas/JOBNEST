                    <font>
                        <Font size="19.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
        <ImageView fitHeight="200.0" fitWidth="121.0" layoutX="14.0" layoutY="177.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@apply.jpg" />
            </image>
        </ImageView>
        <ImageView fitHeight="26.0" fitWidth="29.0" layoutX="494.0" layoutY="110.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@search.jpg" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
