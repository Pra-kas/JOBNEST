        <Label layoutX="149.0" layoutY="225.0" text="Result : ">
            <font>
                <Font size="21.0" />
            </font>
        </Label>
        <TextArea fx:id="resulttid" layoutX="243.0" layoutY="207.0" prefHeight="155.0" prefWidth="306.0" />
        <Button fx:id="applyid" layoutX="34.0" layoutY="319.0" mnemonicParsing="false" onAction="#HandleApply" prefHeight="36.0" prefWidth="94.0" style="-fx-background-color: #1D2026; -fx-background-radius: 10;" text="Apply" textFill="#fffdfd">
